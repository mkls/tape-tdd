{
  "name": "tape-tdd",
  "version": "0.0.1",
  "description": "Run tape tests after every modification and print a pretty output",
  "main": "index.js",
  "scripts": {
    "test": "tape **/*.spec.js | tap-min",
    "tdd": "tape-watch src/**/*.spec.js -p tap-min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkls/tape-tdd.git"
  },
  "keywords": [
    "tape",
    "tdd",
    "watch",
    "watcher",
    "test",
    "reporter",
    "tap-reporter"
  ],
  "author": "Mkls",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkls/tape-tdd/issues"
  },
  "homepage": "https://github.com/mkls/tape-tdd#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "chokidar": "^1.6.1",
    "globby": "^6.1.0",
    "hirestime": "^3.1.0",
    "object-inspect": "^1.2.1",
    "pretty-ms": "^2.1.0",
    "tape": "^4.6.0"
  },
  "devDependencies": {
    "eslint": "^3.14.1",
    "tap-min": "^1.1.0",
    "tape": "^4.6.0",
    "tape-watch": "^2.2.4"
  }
}
